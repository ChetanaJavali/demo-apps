install:
	go install -v

validate:
	swagger validate ./swagger/swagger.yml

gen: validate
	git grep -lF '// Code generated by go-swagger; DO NOT EDIT.' -- swagger | xargs git rm -f
	swagger generate server \
		--target=./swagger \
		--spec=./swagger/swagger.yml \
		--exclude-main \
		--name=harmony-puzzle
	git add swagger

.PHONY: install gen validate
